---
import logo from '../../assets/logo.svg';
import Navbar from './Navbar.astro';
---

<header>
    <div class="container">
        <div class="flex">
            <a href="/" class="icon">
                <img src={logo.src} alt="logo brand" />
            </a>

            <Navbar />
        </div>
    </div>
</header>

<style>
    header {
        padding-block: 2.5rem;
    }

    .icon {
        width: clamp(6rem, 17vw, 10rem);
    }

    img {
        width: 100%;
    }
</style>
