---
const { text, inputPlaceholder, idBtn, idInput } = Astro.props;
---

<form>
    <input
        type="email"
        name="email"
        id={idInput}
        placeholder={inputPlaceholder}
    />
    <span></span>
    <button id={idBtn}>{text}</button>
</form>

<style>
    form {
        padding-inline: 0.3rem;
        position: relative;
    }

    input,
    button {
        padding: 0.8rem;
        width: 100%;
        display: block;
        border-radius: 5px;
        font-weight: 700;
    }

    input {
        border: 1px solid var(--desaturated-blue);
        margin-bottom: 1.3rem;
    }

    input::placeholder {
        color: var(--light-gray);
    }

    button {
        border: none;
        color: var(--light-grayish-blue);
        background-color: var(--bright-blue);
        cursor: pointer;
        transition: opacity 200ms ease-in-out;
    }

    button:hover {
        opacity: 0.7;
    }

    .error {
        position: absolute;
        bottom: 2.7rem;
        left: 10px;
        font-size: 14px;
        color: rgb(225, 71, 71);
    }
</style>
