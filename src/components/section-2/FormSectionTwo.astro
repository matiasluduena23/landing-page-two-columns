<form id="form-section">
    <input
        type="email"
        name="email"
        id="section-input"
        placeholder="email@example.com"
    />
    <span id="section-message-element"></span>
    <button id="section-two-form-btn">Get Started For Free</button>
</form>

<style>
    form {
        padding-inline: 0.3rem;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    input,
    button {
        padding: 0.8rem;
        width: 100%;
        display: block;
        border-radius: 5px;
        font-weight: 700;
        max-width: 300px;
        margin-inline: auto;
    }

    input {
        border: 1px solid var(--desaturated-blue);
        margin-bottom: 1.3rem;
    }

    input::placeholder {
        color: var(--light-gray);
    }

    button {
        border: 1px solid var(--bright-blue);
        color: var(--light-grayish-blue);
        background-color: var(--bright-blue);
        cursor: pointer;
        transition: opacity 200ms ease-in-out;
    }

    button:hover {
        opacity: 0.7;
    }

    #section-message-element {
        position: absolute;
        bottom: 2.7rem;
        left: 0;
        right: 0;
        margin-inline: auto;
        font-size: 14px;
    }

    .show-error #section-message-element {
        color: var(--light-grayish-blue);
    }

    .show-error input {
        border: 1px solid rgb(225, 71, 71);
    }

    .show-success #section-message-element {
        font-weight: 700;
        color: rgb(81, 205, 81);
    }

    .show-success input {
        border: 1px solid var(--desaturated-blue);
    }

    @media (min-width: 800px) {
        form {
            max-width: 600px;
        }

        input {
            max-width: 500px;
            margin-inline: 0;
        }

        button {
            max-width: 200px;
            margin-inline: 0;
        }
    }
</style>
